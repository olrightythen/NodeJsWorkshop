<% if (blogs.length === 0) { %>
<div class="center">
  <h2>No blogs found!</h2>
  <a href="/create" class="btn btn-create">Create a new blog</a>
</div>
<% } else { %>
<div class="container">
  <% blogs.forEach(function(blog) { %>
  <div class="card">
    <img src="uploads/<%= blog.image %>" alt="<%= blog.title %>" />
    <div class="card-content">
      <h3><%= blog.title %></h3>
      <h4><%= blog.subtitle %></h4>
      <a href="/blogs/<%= blog.id %>">Read More</a>
    </div>
  </div>
  <% }); %> <% } %>
</div>
